---
import "../styles/global.css";
import { getCollection } from 'astro:content';
import Layout from "../layouts/Layout.astro";
import Header from "../components/header.astro";
---

<Layout title="Apuntes">
    <Header />
    <h1 class="text-4xl font-bold text-center mt-8 mb-6">Apuntes</h1>
    <div class="fixed inset-0 -z-20 h-full w-full bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] opacity-20"></div>
    <div class="fixed inset-0 -z-20 h-full w-full bg-white [background:radial-gradient(125%_125%_at_50%_10%,#fff_40%,#63e_100%)] opacity-15"></div>
    
    <div class="flex flex-col items-center justify-center mt-24">
        <div class="bg-purple-100 border-2 border-purple-400 rounded-xl px-8 py-6 shadow-lg animate-pulse">
            <span class="block text-3xl font-extrabold text-purple-700 mb-2">¡Próximamente!</span>
            <span class="block text-lg text-purple-500">Estamos trabajando para traerte los mejores apuntes. ¡Vuelve pronto!</span>
        </div>
    </div>
</Layout>