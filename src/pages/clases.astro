---
import "../styles/global.css";
import { getCollection } from 'astro:content';
import Layout from "../layouts/Layout.astro";
import Header from "../components/header.astro";

const subjects = await getCollection('subject');
---

<Layout title="CLASES">
    <div class="sticky top-0 z-50 bg-white/150 backdrop-blur-sm before:absolute before:inset-0 before:bg-gradient-to-b before:from-white/70 before:to-transparent before:pointer-events-none">
        <Header />
    </div>
    <h1 class="text-center text-4xl font-bold my-8">CLASES</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 p-4">
        {subjects.map((subject) => (
            <div class="rounded-lg shadow-lg overflow-hidden">
                <img src={subject.data.img} alt={subject.data.title} class="w-full h-48 object-cover" />
                <div class="p-4">
                    <h2 class="text-xl font-semibold">{subject.data.title}</h2>
                    <p class="text-gray-600">{subject.data.description}</p>
                </div>
            </div>
        ))}
    </div>
</Layout>